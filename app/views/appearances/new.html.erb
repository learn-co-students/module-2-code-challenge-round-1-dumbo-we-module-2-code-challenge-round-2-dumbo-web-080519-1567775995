<h1>Create New Appearance</h1>

<br>

<% if flash[:errors] %>
  <h3>There were some errors:</h3>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<br>

<%= form_for @appearance do |f| %>

  <%= f.label :guest_id %>
  <%= f.collection_select :guest_id, @guests, :id, :name %><br>

  <%= f.label :episode_id %>
  <%= f.collection_select :episode_id, @episodes, :id, :number %><br>

  <%= f.label :guest_rating, "Guest Rating (1-5)" %>
  <%= f.number_field :guest_rating %><br><br>

  <%= f.submit %>

<% end %>
