<h1>Create a new rating</h1>

<% if flash[:errors] %>
  <%  flash[:errors].each do |error_messages| %>
      <%= error_messages %>
    <% end %>
<% end %>

<%= form_for @rating do |f| %>
  <%= f.label :rate %>
  <%= f.number_field :rate %>
  <%= f.label :episode_id %>
  <%= f.collection_select :episode_id, Episode.all, :id, :date %>
  <%= f.label :guest_id %>
  <%= f.collection_select :guest_id, Guest.all, :id, :name %>
  <%= f.submit %>
<% end %>
