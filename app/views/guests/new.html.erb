<h1>Create a new guest!</h1>

<%= form_for @guest do |f|%>
<%= f.label :guest_id %>
<%= f.collection_select :guest_id, @guests, :id, :name %>

<%= f.label :episode_id %>
<%= f.collection_select :episode_id, @episodes, :id, :number %>

<%= f.label :rating %>
<%= f.number_field :rating %>

<%= f.submit "Create this guest!" %>
<% end  %>
